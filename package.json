{
  "name": "pnpm-nx-trpc-cdk-vite-react-tailwind-template",
  "version": "1.0.0",
  "private": true,
  "description": "A modern full-stack monorepo template with pnpm, Nx, tRPC, AWS CDK, Vite, React, and Tailwind CSS",
  "license": "MIT",
  "engines": {
    "node": ">=22.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@8.15.0",
  "scripts": {
    "dev": "nx run-many --target=dev --all",
    "build": "nx run-many --target=build --all",
    "test": "nx run-many --target=test --all",
    "lint": "nx run-many --target=lint --all",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,md,mdx,css,html,yml,yaml}\"",
    "clean": "nx reset && rm -rf node_modules apps/*/node_modules packages/*/node_modules",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@nx/devkit": "^17.2.0",
    "@nx/eslint-plugin": "^17.2.0",
    "@nx/jest": "^17.2.0",
    "@nx/js": "^17.2.0",
    "@nx/linter": "^17.2.0",
    "@nx/react": "^17.2.0",
    "@nx/vite": "^17.2.0",
    "@nx/workspace": "^17.2.0",
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "eslint": "^8.55.0",
    "eslint-config-prettier": "^9.1.0",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.0",
    "nx": "^17.2.0",
    "prettier": "^3.1.0",
    "ts-jest": "^29.1.1",
    "typescript": "^5.3.0"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,json,md,mdx,css,html,yml,yaml}": [
      "prettier --write"
    ]
  }
}
